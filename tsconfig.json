{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs"
  },
  "typeRoots" : [
    "./types/",
    "./node_modules/@types/"
  ],
  "include": [
    "./src/",
    "./examples/",
    "./tests/",
    "./types/",
    "./test-files"
  ]
}
